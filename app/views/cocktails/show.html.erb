<h1><%= @cocktail.name %></h1>
<%= image_tag @cocktail.picture.url(:medium) %>

<h3> Doses </h3>

<% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.ingredient.name %> : <%= dose.description %>
  </li>
<% end %>


<p><%= link_to "Back to cocktails list", cocktails_path %></p>

<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
