<h1 class="text-center"><%= @cocktail.name %></h1>
<p class="text-center"> <%= image_tag @cocktail.picture.url(:medium) %></p>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h3> Doses </h3>
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> : <%= dose.description %>
          </li>
        <% end %>
      <%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' }, class: "btn btn-danger" %>
      <%= link_to "Back to cocktails list", cocktails_path, class: "btn btn-primary" %>
      <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
    </div>
  </div>
</div>
